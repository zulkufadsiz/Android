<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card:cardBackgroundColor="#ffffff"
    card:cardCornerRadius="5dp"
    card:cardElevation="2dp"
    card:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/imageFrame"
            android:layout_width="90dp"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/ivNewsImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_0" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageFrame"
            android:layout_toRightOf="@+id/imageFrame"
            android:layout_alignParentTop="true">


            <TextView
                android:id="@+id/tvNewsCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Caption"
                android:maxLines="1"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/tvNewsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Description"
                android:layout_below="@id/tvNewsCaption"
                android:maxLines="3"/>

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>