<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/busImageFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBusNumberImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/blank_circle"
            android:padding="15dp"/>
        <TextView
            android:id="@+id/tvBusNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="47"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/sduKirmizi"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tvBusTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/busTime"
        android:layout_toRightOf="@+id/busImageFrame"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/tvBusRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/busRoute"
        android:layout_toRightOf="@+id/busImageFrame"
        android:paddingTop="15dp"
        android:layout_below="@+id/tvBusTime"
        android:singleLine="true"
        android:paddingRight="10dp"/>

</RelativeLayout>